#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/bosh_pipeline_dashboard_agent/helpers/ctl_setup.sh 'bosh_pipeline_dashboard_agent'

export PORT=${PORT:-5000}
export LANG=en_US.UTF-8

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    # store pid in $PIDFILE
    echo $$ > $PIDFILE

    while true
    do
    	deployments=$(curl -ks $BOSH_TARGET/deployments -u $BOSH_USER:$BOSH_PASSWORD)
      uuid="the-uuid"
      bosh_name="demo"

      curl -v -X POST ${COLLECTOR_API}/upload -d "{\"uuid\": \"$uuid\", \"name\": \"$bosh_name\", \"deployments\": $deployments}"
    	sleep $UPLOAD_INTERVAL
    done

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: bosh_pipeline_dashboard_agent_ctl {start|stop}"

    ;;

esac
exit 0
